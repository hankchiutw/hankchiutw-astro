---
// MainLayout.astro
import { ViewTransitions } from 'astro:transitions';
const { title = "Hank Chiu - Web Front-End Expert" } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<header>
			<nav>
				<a href="/">Home</a>
				<a href="/experiences">Experiences</a>
				<a href="/projects">Projects</a>
			</nav>
			<button id="theme-toggle" class="theme-toggle" aria-label="Toggle dark mode">
				<span class="theme-toggle-light">ðŸ”†</span>
				<span class="theme-toggle-dark" style="display: none;">ðŸŒ™</span>
			</button>
		</header>
		<main transition:animate="fade">
			<slot />
		</main>
		<footer>
			<p>Â© 2023 - Hank Chiu</p>
		</footer>
	</body>
</html>

<script>
	// Theme management
	const themeToggle = document.getElementById('theme-toggle');
	const lightIcon = document.querySelector('.theme-toggle-light') as HTMLElement;
	const darkIcon = document.querySelector('.theme-toggle-dark') as HTMLElement;
	const htmlElement = document.documentElement;
	
	// Check if user previously set a preference
	const savedTheme = localStorage.getItem('theme');
	if (savedTheme === 'dark' && lightIcon && darkIcon) {
		document.body.classList.add('dark-theme');
		htmlElement.classList.add('dark-theme');
		lightIcon.style.display = 'none';
		darkIcon.style.display = 'inline';
	}
	
	// Toggle theme when button is clicked
	themeToggle?.addEventListener('click', () => {
		const isDarkTheme = document.body.classList.toggle('dark-theme');
		htmlElement.classList.toggle('dark-theme');
		
		if (isDarkTheme && lightIcon && darkIcon) {
			localStorage.setItem('theme', 'dark');
			lightIcon.style.display = 'none';
			darkIcon.style.display = 'inline';
		} else if (lightIcon && darkIcon) {
			localStorage.setItem('theme', 'light');
			lightIcon.style.display = 'inline';
			darkIcon.style.display = 'none';
		}
	});
	
	// Also check for system preference if no saved preference
	if (!savedTheme && lightIcon && darkIcon) {
		const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
		if (prefersDark) {
			document.body.classList.add('dark-theme');
			htmlElement.classList.add('dark-theme');
			lightIcon.style.display = 'none';
			darkIcon.style.display = 'inline';
		}
	}

	// Improve page transitions
	document.addEventListener('astro:before-swap', (event) => {
		// Pass the current theme to the next page
		const currentTheme = localStorage.getItem('theme') || 
			(window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
		
		// Use the Astro view transition API to preserve theme state
		if (currentTheme === 'dark') {
			(event.newDocument as Document).documentElement.classList.add('dark-theme');
			(event.newDocument as Document).body.classList.add('dark-theme');
		}
	});
</script>

<style is:global>
	@import "../styles/global.css";
</style> 