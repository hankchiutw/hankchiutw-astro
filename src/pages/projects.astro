---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="My Projects">
	<h1>My Projects</h1>
	<div class="projects-grid">
		<div class="project-card">
			<h2>Personal Blog</h2>
			<p>A blog built with Astro featuring fast page loads and minimal JavaScript.</p>
			<div class="tech-stack">
				<span>Astro</span>
				<span>JavaScript</span>
				<span>CSS</span>
			</div>
			<a href="#" class="project-link">View Project</a>
		</div>
		
		<div class="project-card">
			<h2>Portfolio Website</h2>
			<p>My personal portfolio showcasing my skills and projects.</p>
			<div class="tech-stack">
				<span>React</span>
				<span>TypeScript</span>
				<span>Tailwind CSS</span>
			</div>
			<a href="#" class="project-link">View Project</a>
		</div>
		
		<div class="project-card">
			<h2>E-commerce App</h2>
			<p>A full-stack e-commerce application with user authentication and payment processing.</p>
			<div class="tech-stack">
				<span>Next.js</span>
				<span>MongoDB</span>
				<span>Stripe API</span>
			</div>
			<a href="#" class="project-link">View Project</a>
		</div>
	</div>
</MainLayout> 