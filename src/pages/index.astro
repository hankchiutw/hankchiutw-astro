<style>
	.hero-section {
		text-align: center;
		padding: 3rem 0;
		max-width: 800px;
		margin: 0 auto;
	}
	
	h1 {
		font-size: 3rem;
		margin-bottom: 0.5rem;
	}
	
	h2 {
		font-size: 1.5rem;
		color: var(--primary-color);
		margin-top: 0;
		margin-bottom: 1rem;
	}
	
	.location {
		font-style: italic;
		margin-bottom: 1.5rem;
	}
	
	.contact-info {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1.5rem;
		margin-bottom: 2rem;
	}
	
	.contact-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		color: var(--text-color);
		font-weight: 500;
		transition: color 0.2s ease;
	}
	
	.contact-link:hover {
		color: var(--primary-color);
	}
	
	.icon {
		font-size: 1.2rem;
	}
	
	.intro {
		font-size: 1.2rem;
		line-height: 1.6;
		margin-bottom: 2rem;
		max-width: 800px;
	}
	
	.strengths-section {
		background-color: var(--accent-bg);
		padding: 3rem 2rem;
		border-radius: 8px;
		margin: 2rem auto;
		max-width: 800px;
	}
	
	.strengths-section h2 {
		text-align: center;
		margin-bottom: 2rem;
	}
	
	.strengths-list {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		padding: 0;
		list-style-position: inside;
	}
	
	.strengths-list li {
		margin-bottom: 1rem;
		line-height: 1.5;
	}
	
	@media (max-width: 768px) {
		.hero-section {
			padding: 2rem 1rem;
		}
		
		.strengths-section {
			padding: 2rem 1rem;
		}
		
		.contact-info {
			flex-direction: column;
			align-items: center;
			gap: 1rem;
		}
		
		.strengths-list {
			grid-template-columns: 1fr;
		}
	}
</style>
