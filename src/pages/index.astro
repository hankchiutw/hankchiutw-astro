---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Hank Chiu - Web Front-End Expert">
	<div class="hero-section">
		<h1>Hank Chiu</h1>
		<h2>Web Front-End Expert</h2>
		<p class="intro">A dedicated software engineer specializing in web front-end development, with valuable experience in back-end technologies. Committed to delivering high-quality solutions that align with business goals and enhance user experiences.</p>
	</div>
	
	<div class="contact-section">
		<h2>Contact Information</h2>
		<ul class="contact-list">
			<li>
				<span class="contact-label">Location:</span>
				<span class="contact-value">Taoyuan, Taiwan</span>
			</li>
			<li>
				<span class="contact-label">Phone:</span>
				<span class="contact-value">+886-978-031073</span>
			</li>
			<li>
				<span class="contact-label">Email:</span>
				<span class="contact-value">
					<a href="mailto:hankchiu.tw@gmail.com">hankchiu.tw@gmail.com</a>
				</span>
			</li>
		</ul>
	</div>
	
	<div class="cta-buttons">
		<a href="/experiences" class="cta-button">View My Experiences</a>
		<a href="/projects" class="cta-button">View My Projects</a>
	</div>
</MainLayout>

<style>
	.hero-section {
		margin-bottom: 2rem;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
	}

	h2 {
		font-size: 1.5rem;
		color: var(--primary-color);
		margin-top: 0;
		margin-bottom: 1.5rem;
	}

	.intro {
		font-size: 1.1rem;
		line-height: 1.6;
		max-width: 800px;
	}

	.contact-section {
		margin-bottom: 2.5rem;
	}

	.contact-list {
		list-style: none;
		padding: 0;
	}

	.contact-list li {
		margin-bottom: 0.75rem;
		display: flex;
		align-items: baseline;
	}

	.contact-label {
		font-weight: bold;
		width: 100px;
	}

	.contact-value a {
		color: var(--primary-color);
		text-decoration: none;
	}

	.contact-value a:hover {
		text-decoration: underline;
	}
</style>
